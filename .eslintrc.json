{
  "root": true,
  "parserOptions": { "project": ["./tsconfig.json"] },
  "rules": {
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "semi": "off",
    "prefer-const": "error",
    "arrow-spacing": "error",
    "block-spacing": "error",
    "comma-dangle": "error",
    "react-hooks/rules-of-hooks": "off",
    "react-hooks/exhaustive-deps": "off",
    "react/display-name": "off",
    "array-bracket-spacing": "off",
    "max-lines": ["error", 300]
  },
  "extends": ["next", "prettier"]
}
